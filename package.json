{
  "name": "@capri-js/monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsc --build packages --watch",
    "clean": "tsc --build packages --clean",
    "build": "tsc --build packages",
    "examples": "node .github/build-examples.cjs",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "test": "vitest --run",
    "e2e": "npm run examples && playwright test",
    "release": "multi-semantic-release --sequential-init --deps.prefix ^"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@qiwi/multi-semantic-release": "^7.1.2",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.16.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.7"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
